<!DOCTYPE html>
<html lang="en">

</head>

<title>Update Exercise</title>

<body>
  <div class="exercise-edit-header">
    <h1>Enhance the <%= exercise.name %> Exercise</h1>
  </div>

<ul class="exercise-edit-nav">
  <li class="left"><a href="/exercise/<%= exercise.id %>">Back</a></li>
  <li class="left"><a href="/exercise"> Home</a></li>
  <li class="right"><a href="/logout">Logout</a></li>
</ul>

  <div class="exercise-show-images">
    <% const imageUrl = exercise.image.startsWith("http") ? new URL(exercise.image).pathname : exercise.image; %>
    <% if (exercise.image.startsWith("http")) { %>
        <img src="<%= exercise.image %>" alt="Exercise Image" class="exercise-img">
    <% } else { %>
        <img src="/<%= exercise.image %>" alt="Exercise Image" class="exercise-img">
    <% } %>
</div>

  <main>
    <div class="exercise-edit-input">
      <form action="/exercise/<%= exercise.id %>?_method=PUT" method="POST">

            <div class="exercise-edit-details">
                <label for="name"><b>Name:</b></label>
                <input type="text" name="name" value="<%= exercise.name %>" >

                <label for="description"><b>Description:</b></label>
                <input type="text" name="description" value="<%= exercise.description %>">

                <label for="category"><b>Category:</b></label>
                <input type="text" name="catergory" value="<%= exercise.category %>">

                <label for="difficultyLevel"><b>Difficulty Level:</b></label>
                <input type="text" name="difficultyLevel" value="<%= exercise.difficultyLevel %>">

                <label for="equipment"><b>Equipment Required:</b></label>
                <input type="text" name="equipment" value="<%= exercise.requiresEquipment %>">
            </div>

            <div class="bottom-button-container">
              <input type="submit" value="Update Exercise" />
            </div>
          </form> 
        </div>

      </form>
    </div>
  </main>

</body>

</html>
